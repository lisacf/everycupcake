<div class="purplebg-paper">
  <div class=row>
    <div class="large-3">
      <%#= @recipe.mastercake.name %>
    </div>
  	<div class="large-9 offset-3 columns">
  		<h1>Cake Recipe Builder</h1>
  		<%= form_for @recipe do |f| %>
        <%= f.label :name, "Cake Name" %>
        <%= f.text_field :name %>
        <%= f.hidden_field :cupcake_part, value: "cake" %>
        <%= render "form", :object => @recipe %>
      <% end %>
  	</div>
  </div>
</div>