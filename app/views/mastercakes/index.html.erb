<% provide :title, 'Recipes' %>
<div class="purplebg-paper">
<div class="color-me">
</div>
<div class="row">
  <div class="medium-9 medium-offset-1">
  <div class="small-11 large-9 columns">
    <div class="non-semantic-protector">
      <div class="ribbon">
        <span class="ribbon-content">Every Cupcake Recipe</span>
      </div>
    </div>
  </div>
  </div>
</div>
<div class="row">
  <% if current_user %>
    <div class="medium-9">
    <div class="large-5 large-offset-3 small-9 small-offset-3 columns">
    <%= link_to 'Create a Cupcake', new_mastercake_path, class:"add-cupcake" %>
    </div>
    </div>
  <% else %>
    <div class="medium-8">
    <div class="small-9 small-offset-3 large-6 large-offset-3 columns">
      <%= link_to 'Sign in to Add a Cupcake Recipe', signin_path, class:"add-cupcake" %>
    </div>
    </div>
  <% end %>
</div>
<div class="row">
  <div class="medium-10">
  <div class="large-9 columns">
    <ul class="small-block-grid-2 large-block-grid-4" >
      <% for mastercake in @mastercakes %>
      <li>
        <%= render 'cake', object: mastercake %>
      </li>
      <% end %>
    </ul>
  </div>
  </div>
</div>

<%#= direct_upload_form_for @uploader do |f| %>
<%#= f.file_field :image %>
<%#= f.submit "Upload Image" %>
<% #end %>




