<%= form_for @mastercake, html: {:multipart => true} do |f| %>
  <% if @mastercake.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@mastercake.errors.count, "error") %> prohibited this mastercake from being saved:</h2>

      <ul>
      <% @mastercake.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :source %><br>
    <%= f.text_field :source %>
  </div>
  <div class="field">
    <%= f.file_field :image %>
    <%= f.label :remote_image_url, "or image url" %>
    <%= f.text_field :remote_image_url %>
  </div>
  <div class="actions">
    <%= f.submit "Build Recipe", class: "medium button"%>
  </div>
<% end %>
