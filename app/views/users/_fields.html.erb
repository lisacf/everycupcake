<%= render 'shared/error_messages', object: f.object %>

<%= f.label :name, "Name" %>
<%= f.text_field :name, required: true, placeholder: "your name here" %>

<%= f.label :email %>
<%= f.email_field :email, required: true, placeholder: "email address here" %>

<%= f.label :screen_name %>
<%= f.text_field :screen_name, placeholder: "screen name here"%>

<%= f.label :password %>
<%= f.password_field :password, required: true, placeholder: "at least 6 characters" %>

<%= f.label :password_confirmation, "Confirm password" %>
<%= f.password_field :password_confirmation, required: true %>