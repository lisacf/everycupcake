<div class="fixed">
  <nav class="top-bar">
    <ul class="title-area">
      <li class="name"><%= image_tag image_url("cupcake30.png") %><%= link_to "Every Cupcake", root_path, id: "logo" %></li>
      <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
    </ul>
    <section class="top-bar-section">
      <ul class="right">
        <li class="divider hide-from-small"></li>
        <li><%= link_to "Recipes", mastercakes_path %></li>

        <li class="has-dropdown">
          <a href="#">
            Stores
          </a>
          <ul class="dropdown">
            <li><%= link_to "Stores", stores_path %></li>
            <li><%= link_to "Map", map_path %></li>
          </ul>
        </li>
        <% if signed_in? %>    
          <li><%= link_to "Users", users_path %></li>
          <li class="has-dropdown"><a href="#">
            Account
            </a>
            <ul class="dropdown">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Edit profile", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to "Sign out", signout_path, method: "delete"%></li>
            </ul>
          </li>
          <% else %>
            <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
      </ul>
    </section>
  </nav>
</div>